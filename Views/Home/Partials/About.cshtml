@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using KAR_Robotics
@inject IStringLocalizer<SharedResource> Localizer
<!-- About Section -->
<section id="about" class="about section" style="padding-bottom: 0px">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-6 order-1 order-lg-2">
                <img src="~/img/KAR-Robotics.jpg" class="img-fluid" alt="">
            </div>
            <div class="col-lg-6 order-2 order-lg-1 content">
                <h3>
                    @Html.Raw(Localizer["AboutH3"])
                </h3>
                <!-- <p class="fst-italic"> -->
                <p>
                @Localizer["AboutP"] 
                </p>
                <ul>
                    <li><i class="bi bi-check2-all"></i> <span>@Localizer["AboutLi1"]</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@Localizer["AboutLi2"]</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@Localizer["AboutLi3"]</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@Localizer["AboutLi4"]</span></li>
                    <li><i class="bi bi-check2-all"></i> <span>@Localizer["AboutLi5"]</span></li>
                </ul>
                <p>
                    @Localizer["AboutP2"]
                </p>
            </div>
        </div>

    </div>

</section><!-- /About Section -->